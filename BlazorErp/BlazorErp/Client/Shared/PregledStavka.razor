<Styled>
    .stavka-title {
        font-size: 14px;
        color: #8898aa !important;
        font-weight: 600!important;
    }
    .stavka-value {
        font-size: 14px;
        color: #32325d !important;
        font-weight: 600!important;
    }
</Styled>

<div class="@Class">
    <div class="stavka-title">
        @Title
    </div>
    <div class="stavka-value">
        @Value
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Value { get; set; }
    [Parameter]
    public string Class { get; set; }
}
